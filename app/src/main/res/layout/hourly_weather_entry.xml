<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="95dp"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/day_tv_hourly"
        android:layout_width="93dp"
        android:layout_height="wrap_content"
        android:text="Todayyy"
        android:textAlignment="center"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/time_tv_hourly"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="11:00AM"
        android:textAlignment="center"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/day_tv_hourly"
        app:layout_constraintStart_toStartOf="@+id/day_tv_hourly"
        app:layout_constraintTop_toBottomOf="@+id/day_tv_hourly" />

    <TextView
        android:id="@+id/temperature_tv_hourly"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="72F"
        android:textAlignment="center"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/hourly_icon"
        app:layout_constraintStart_toStartOf="@+id/hourly_icon"
        app:layout_constraintTop_toBottomOf="@+id/hourly_icon" />

    <TextView
        android:id="@+id/temperature_desc_tv_hourly"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Broken Clouds"
        android:textAlignment="center"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/temperature_tv_hourly"
        app:layout_constraintStart_toStartOf="@+id/temperature_tv_hourly"
        app:layout_constraintTop_toBottomOf="@+id/temperature_tv_hourly" />

    <ImageView
        android:id="@+id/hourly_icon"
        android:layout_width="95dp"
        android:layout_height="58dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/time_tv_hourly"
        app:srcCompat="@drawable/_01d" />
</androidx.constraintlayout.widget.ConstraintLayout>